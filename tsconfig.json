{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["site/**"]
}
